<%= form_with(model: kiosk) do |f| %>
  <% if kiosk.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(kiosk.errors.count, "error") %> prohibited this kiosk from being saved:</h2>
      <ul>
        <% kiosk.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, required: true %>
  </div>

  <div class="field">
    <%= f.label :slug %><br>
    <%= f.text_field :slug, required: true %>
  </div>

  <div class="field">
    <%= f.label :catalog_url, "Catalog URL" %><br>
    <%= f.text_field :catalog_url, required: true %>
  </div>

  <div class="field">
    <%= f.label :kiosk_group_id, "Group" %><br>
    <%= f.collection_select :kiosk_group_id,
                            KioskGroup.all,
                            :id,
                            :name,
                            include_blank: "None" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

